{
  "name": "imapnotify",
  "version": "0.4.1",
  "description": "Execute scripts on new messages using IDLE imap command",
  "repository": {
    "type": "git",
    "url": "git://github.com/a-sk/node-imapnotify.git"
  },
  "author": {
    "name": "Alexandr Skurikhin",
    "email": "a@skurih.in"
  },
  "bin": "bin/imapnotify",
  "dependencies": {
    "debug": "^3.1.0",
    "imap": "~0.8.14",
    "yargs": "^10.0.3"
  },
  "keywords": ["imap", "notify", "mail", "email"],
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.7.0",
    "flow-typed": "^2.2.3",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.1"
  },
  "scripts": {
    "lint": "npm-run-all run-prettier run-eslint run-flow",
    "run-eslint": "eslint --config ./.eslintrc.json ./bin/**/* ./src/**/*",
    "run-flow": "flow check",
    "run-prettier": "prettier ./bin/**/* ./src/**/* ./README.md --write",
    "test": "nix-build ./nix/run-tests.nix"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  }
}
